rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Restrict writes - signed URLs bypass these rules, so this is just a safety net
    // When using signed URLs from generateUploadUrl function, these rules don't apply
    // because signed URLs have their own authentication built-in
    match /videos/{videoId} {
      // Deny direct writes - force use of signed URLs
      // Signed URLs generated by Cloud Functions bypass storage rules
      allow write: if false;
    }
  }
}
